<hbox styleName="tabbar">
    <style>
        .tabbar {
            width: 100%;
            spacing: 0;
            background-color: #1d2021;
        }
        .menu-item-picker {
            background-color: #1d2021;
            border: none;
        }
        .item-picker-container {
            border: none;
        }
    </style>
    <menu-item-picker id="picker" showText="false" showIcon="false" width="64px" panelWidth="200" animatable="false" verticalAlign="center">
        <item-renderer id="itemPickerRenderer">
            <image resource="icons/kebab-dropdown" horizontalAlign="center" />
        </item-renderer>
        <data>
            <item text="New" />
            <item id="open" text="Open" />
            <item text="Save" />
            <item text="Import" />
            <item text="Export" />
        </data>
    </menu-item-picker>

    <tabbar>
        <button text="Project 1"/>
        <button text="Project 2"/>
        <button text="Project 3"/>
        <button text="Project 4"/>
    </tabbar>
</hbox>
